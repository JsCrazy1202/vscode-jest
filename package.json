{
  "name": "vscode-jest",
  "displayName": "Jest",
  "description": "Use Facebook's Jest With Pleasure.",
  "version": "0.0.6",
  "publisher": "Orta",
  "engines": {
    "vscode": "^1.5.0"
  },
  "author": {
    "name": "Orta Therox",
    "url": "http://orta.io"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/orta/vscode-jest"
  },
  "galleryBanner": {
    "theme": "light",
    "color": "#ca461a"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:node_modules/.bin/jest"
  ],
  "main": "./out/src/extension",
  "icon": "images/vscode-jest.png",
  "contributes": {
    "commands": [
      {
        "command": "extension.jest.startJest",
        "title": "Start Watching Jest"
      }
    ],
    "configuration": {
      "jest.watchOnProjectOpen": {
        "type": "boolean",
        "default": true,
        "description": "Start watching tests the moment you open a Jest project"
      },
      "jest.pathToJest": {
        "type": "string",
        "default": "node_modules/.bin/jest",
        "description": "Path to jest binary"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/babylon": "^6.7.14",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^2.3.3",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "babylon": "^6.13.0",
    "tmp": "0.0.29"
  }
}
